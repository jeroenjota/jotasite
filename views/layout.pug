html(lang="en-US")
  head
    title Jota Services #{title}
    link(rel="icon" href="img/logo.jpg")

    // font Awesome
    link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css')
    // MD Bootstrap
    link(rel='stylesheet' href='css/mdb.min.css')
    link(href="./css/jota.css" rel = "stylesheet")
    link(rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond+Lora+Radley")
